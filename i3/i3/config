# Modifier: Windows key
set $mod Mod4
floating_modifier $mod

# Font
# font pango:pragmataproforpowerline 9
font pango:roboto 10
# font pango:hurmitnerdfontmedium 9

###################
## WINDOW LAYOUT ##
###################
# workspace_layout tabbed

#################
## KEY BINDING ##
#################
# start a terminal
# bindsym $mod+Return exec xfce4-terminal
bindsym $mod+Return exec terminator

# start a browser
bindsym $mod+n exec nautilus -w

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d          exec --no-startup-id dmenu_run         -p '>' -fn 'roboto-mono-12' -i -sb '#2aa198' -nb '#073642' -sf '#073642' -nf '#2aa198' -dim 0.2
bindsym $mod+BackSpace  exec --no-startup-id passmenu   --type -p '#' -fn 'roboto-mono-12' -i -sb '#b58900' -nb '#002b36' -sf '#002b36' -nf '#b58900' -x 900 -y 150 -w 400 -l 20 -dim 0.6
bindsym Print           exec --no-startup-id deepin-screenshot
bindsym $mod+Tab        exec --no-startup-id rofi -show

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+m exec /home/$USER/.i3/lock3.sh -f Roboto-Mono-Light -p
# bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move desktop to other outputs
bindsym $mod+Mod1+h move workspace to output left
bindsym $mod+Mod1+j move workspace to output down
bindsym $mod+Mod1+k move workspace to output up
bindsym $mod+Mod1+l move workspace to output right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
# bindsym $mod+a focus parent

# Workspace management

## Naming
set $workspace10 "10:"
set $workspace11 "11:"
set $workspace12 "12:"
set $workspace13 "13:"
set $workspace14 "14:"
set $workspace15 "15:"
set $workspace101 "101:⒈"
set $workspace102 "102:⒉"
set $workspace103 "103:⒊"
set $workspace104 "104:⒋"
set $workspace105 "105:⒌"
set $workspace106 "106:⒍"
set $workspace107 "107:⒎"
set $workspace108 "108:⒏"
set $workspace109 "109:⒐"
set $workspace110 "110:"

## Switch to workspace
bindsym $mod+t workspace $workspace10
bindsym $mod+y workspace $workspace11
bindsym $mod+u workspace $workspace12
bindsym $mod+i workspace $workspace13
bindsym $mod+o workspace $workspace14
bindsym $mod+p workspace $workspace15
bindsym $mod+1 workspace $workspace101
bindsym $mod+2 workspace $workspace102
bindsym $mod+3 workspace $workspace103
bindsym $mod+4 workspace $workspace104
bindsym $mod+5 workspace $workspace105
bindsym $mod+6 workspace $workspace106
bindsym $mod+7 workspace $workspace107
bindsym $mod+8 workspace $workspace108
bindsym $mod+9 workspace $workspace109
bindsym $mod+0 workspace $workspace110

# move focused container to workspace
bindsym $mod+Shift+t move container to workspace $workspace10
bindsym $mod+Shift+y move container to workspace $workspace11
bindsym $mod+Shift+u move container to workspace $workspace12
bindsym $mod+Shift+i move container to workspace $workspace13
bindsym $mod+Shift+o move container to workspace $workspace14
bindsym $mod+Shift+p move container to workspace $workspace15
bindsym $mod+Shift+1 move container to workspace $workspace101
bindsym $mod+Shift+2 move container to workspace $workspace102
bindsym $mod+Shift+3 move container to workspace $workspace103
bindsym $mod+Shift+4 move container to workspace $workspace104
bindsym $mod+Shift+5 move container to workspace $workspace105
bindsym $mod+Shift+6 move container to workspace $workspace106
bindsym $mod+Shift+7 move container to workspace $workspace107
bindsym $mod+Shift+8 move container to workspace $workspace108
bindsym $mod+Shift+9 move container to workspace $workspace109
bindsym $mod+Shift+0 move container to workspace $workspace110

# Program specific
for_window [class="^.*"] tiling enable
for_window [class="^.*"] border pixel 0
for_window [class="^Slack$"] $workspace13
for_window [class="^Rocketchat"] $workspace11
for_window [class="^Thunderbird"] $workspace10
for_window [class="^Atom$"] $workspace12
for_window [class="^Spotify$"] $workspace11
for_window [class="feh"] floating enable
for_window [class="Nautilus"] floating enable
for_window [class="qjackctl"] floating enable
assign [class="^Slack$"] $workspace13
assign [class="^Rocketchat$"] $workspace13
assign [class="^Thunderbird$"] $workspace10
assign [class="^Atom$"] $workspace12
assign [class="^spotify$"] $workspace11

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r exec "killall compton ; compton -cb" ; restart
# bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec i3-msg exit
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym h resize shrink width 5 px or 5 ppt
    bindsym j resize grow height 5 px or 5 ppt
    bindsym k resize shrink height 5 px or 5 ppt
    bindsym l resize grow width 5 px or 5 ppt
    bindsym Left resize shrink width 5 px or 5 ppt
    bindsym Down resize grow height 5 px or 5 ppt
    bindsym Up resize shrink height 5 px or 5 ppt
    bindsym Right resize grow width 5 px or 5 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Screenshot with scrot
bindsym 0xff61 exec scrot ~/screenshots/screenshot_%Y_%m_%d_%H_%M_%S.png
bindsym XF86Display exec ~/.i3/screen.sh

# Pulse Audio controls
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
# bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.i3/volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.i3/volume.sh down
bindsym XF86AudioMute        exec --no-startup-id ~/.i3/volume.sh mute

bindsym XF86AudioPrev        exec --no-startup-id sp prev
bindsym XF86AudioNext        exec --no-startup-id sp next
bindsym XF86AudioPlay        exec --no-startup-id sp play

# Sreen brightness controls
# bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
# bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness


##############
## i3status ##
##############
bar {
    mode dock
    strip_workspace_numbers yes
    tray_output primary
    tray_padding 2

    position top
    workspace_buttons yes

    i3bar_command i3bar -t
    # height 22
    status_command i3status | ~/ypi.scripts/show_argent.sh | ~/ypi.scripts/pystatus.py
    separator_symbol "  "
    colors {
      background          #002b36e0
      statusline          #fdf6e3
      separator           #586e75

      #type              border      background  text
      focused_workspace  #859900     #859900     #fdf6e3
      active_workspace   #002b36     #002b36     #fdf6e3
      inactive_workspace #002b36     #002b36     #fdf6e3
      urgent_workspace   #002b36     #002b36     #fdf6e3
  }
}

hide_edge_borders both

client.focused              #121212     #073642     #93a1a1    #073642
client.focused_inactive     #101010     #002b36     #586e75    #586e75
client.unfocused            #101010     #002b36     #586e75    #586e75
client.urgent               #cd989a     #cb4b16     #586e75    #586e75
client.background           #073642
